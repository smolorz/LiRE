menu "Build"

config LIRE_BUILD_SRC
    bool "  Build sources"
    default y
    help
    Build LIRE sources.

    depends on LIRE_BUILD_SRC

config LIRE_BUILD_ALL
    bool "    Build all packages"
    default n
    depends on LIRE_BUILD_SRC

    select LIRE_LINUX_BUILD_SRC
